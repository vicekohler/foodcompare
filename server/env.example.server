# ============================
#  SERVER – VARIABLES DE ENTORNO
# ============================

# Backend port (Render asigna automáticamente uno)
PORT=4000

# Dominio del frontend autorizado para CORS
# En desarrollo:
FRONTEND_ORIGIN=http://localhost:5173
# En producción cambiar por:
# FRONTEND_ORIGIN=https://TU_FRONTEND.vercel.app

# Supabase Service (usar service_role, no el anon)
SUPABASE_URL=TU_SUPABASE_URL
SUPABASE_SERVICE_KEY=TU_SUPABASE_SERVICE_ROLE_KEY

# JWT secreto para autenticación
JWT_SECRET=CAMBIA_ESTE_SECRET

# Clave de API de Gemini
GEMINI_API_KEY=TU_GEMINI_API_KEY

# Ambiente
NODE_ENV=development
